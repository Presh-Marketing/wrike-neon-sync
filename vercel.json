{
  "version": 2,
  "builds": [
    {
      "src": "app_vercel_simple.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app_vercel_simple.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
} 